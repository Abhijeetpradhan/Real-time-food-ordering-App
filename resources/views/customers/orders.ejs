<style>
    #banner::before {
        content: "";
        background: #121619 url(/img/menu-banner-1.png) no-repeat center / cover;
        height: 450px;
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
    }

    .margin-t {
        margin-top: 0;
    }

    .padding-t {
        padding-top: 24px;
    }
</style>
<div id="banner" class="pt-48">
    <!-- <h4 class="text-center text-primary sm:text-3xl text-xl font-body1 capitalize">fresh from pizzon</h4> -->
    <h1 class="sm:text-7xl mobile:text-5xl text-4xl text-primary text-center font-body font-bold uppercase mb-10">my orders </h1>
</div>


<section class="orders light-section mb-10">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4 mx-20">All orders</h1>
        <% if(messages.success) { %>
        <div id="success-alert" class="mx-20 flex items-center bg-green-500 text-white text-sm font-bold px-4 py-3"
            role="alert">
            <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path
                    d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
            </svg>
            <p><%= messages.success %></p>
        </div>
        <% } %>
        <div class="mx-20">
            <table class="w-full table-auto bg-white"> 
               <thead>
                   <tr>
                       <th class="px-4 py-2 text-left">Orders</th>
                       <th class="px-4 py-2 text-left">Phone</th>
                       <th class="px-4 py-2 text-left">Address</th>
                       <th class="px-4 py-2 text-left">Time</th>
                   </tr>
               </thead>
               <tbody>
                   <% if(orders.length) { %>
                   <% orders.forEach((order) => { %>
                   <tr>
                       <td class="border px-4 py-2">
                           <a class="link text-primary" href="/customer/orders/<%= order._id %>"><%= order._id %></a>
                       </td>
                       <td class="border px-4 py-2">
                           <%= order.phone %>
                       </td>
                       <td class="border px-4 py-2">
                           <%= order.address %>
                       </td>
                       <td class="border px-4 py-2">
                           <%= moment(order.createdAt).format('hh:mm A') %>
                       </td>
                   </tr>
                   <% }) %>
                   <% } else { %>
                   <tr>
                       <td class="p-4"><span>No orders found!</span></td>
                   </tr>
                   <% } %>
               </tbody>
           </table> 
        </div>
    </div>
</section>

<script src="/js/app.js"></script>